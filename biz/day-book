    <h4 class="text-center my-3">Stock Report</h4>
    
    <section v-cloak id="body" class="container">   
     
      <div v-show="!showTable" class="text-center">
        <div class="spinner-border" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      
      <table v-show="showTable" class="table">
        <thead>
          <th>Item</th>
          <th>Stock</th>
          <th>Stock Value</th>
        </thead>
        <tbody>
          <tr v-on:click="row_click(this.textContent)" v-for="item in itemsList">
            <td v-text="item.item"></td>
            <td v-text="item.stock"></td>
            <td v-text="item.stockValue"></td>
          </tr>
        </tbody>
      </table>
      
    </section>
    
    <script>
    
      
      var app = new Vue({
        el: '#body',
        data() {
          return {
            showTable: false,
            userId: '',
            itemsList: []
          }            
        },
        methods: {
          show_items() {
            db.collection('biz')
            .doc(this.userId)
            .collection('items')
            .orderBy('itemInfo.item', 'asc')
            .get()
            .then((snapshot)=>{
              snapshot.forEach((doc)=>{
                var val = doc.data().itemInfo;
                this.itemsList.push({
                  item: val.item,
                  stock: val.stock,
                  stockValue: (val.stock * val.costPrice) 
                });    
              });
            }).then(() => {
              this.showTable = true;
            });
          },              
          
          get_user_id() {
            auth.onAuthStateChanged((user) => {           
              if (user) {
                this.userId = (user.uid);
                this.show_items();
              }
              else {
                document.write('Please Login');
                setTimeout(() => {
                window.location.href = '/store/login'; 
              }, 1000)
              }
            });*/
          },
          
          row_click(row) {
            var data = row;
            console.log(data);
          }            
        
        } 
      });
      
      app.get_user_id();
                             
    </script>  
     
