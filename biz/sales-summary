    <div id="body" v-cloak>
    
      <h3 class="text-center my-3">Sales Reports</h3>
    
    <div class="container">
      <div class="alert alert-warning" role="alert">Please select From and To date to see reports</div>
      
      <br>
      <h5>Date Range</h5>
      <br>
      
      <div class="row">
        <div class="col">
          <label>From</label>
          <input v-model="fromDate" type="date" class="form-control">
        </div>
        <div class="col">
          <label>To</label>
          <input v-model="toDate" type="date" class="form-control">
        </div>
      </div>
      <div class="text-right">
        <button v-on:click.prevent="get_sales_data()" class="btn btn-primary mt-4 mb-4">Apply</button>
      </div>
      
      <section v-show="showData" class="container">
        <h6>SALES SUMMARY: OVERVIEW</h6>
        <br>
        <br><br>
        <div class="row" >
          <div class="col">
            <h3>₹ {{ totalSales }}</h3>
          </div>
          <div class="col">
            <h3>{{ noOfSales }}</h3>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span>Total Sales</span>
          </div>
          <div class="col">
            <span>No. of Sales</span>
          </div>
        </div>
        <br>
        <hr>
        <div class="row">
          <div class="col">
            <h3>₹ {{ totalMargin }}</h3>
          </div>
          <div class="col">
            <h3>₹ {{ avgSale }}</h3>
          </div>
        </div>
        <div class="row" >
          <div class="col">
            <span>Profit</span>
          </div>
          <div class="col">
            <span>Avg. sale</span>
          </div>
        </div>
        <br>
        <hr>
        <div class="row">
          <div class="col">
            <h6>TOTAL SALES: CHART</h6>
            <br><br>
            <canvas id="sales-chart"></canvas>
          </div>
        </div>
        <hr>
      </section>
    </div>
    
    <script>
    
      var app = new Vue({
        el: '#body',
        data() {
          return {
            showData: false,
            fromDate: '',
            toDate: '',
            totalSales: 0,
            noOfSales: 0,
            avgSale: 0,
            totalMargin: 0,
            salesArr: [],
            labelsArr: [],
            marginArr: []    
          }              
        },
        methods: {
          get_sales_data() {
            this.totalSales = 0;
            this.noOfSales = 0;
            this.avgSale = 0;
            this.totalMargin = 0;
            this.salesArr = [];
            this.labelsArr = [];
            this.marginArr = [];
            this.showData = true;
            var tempFromDate = new Date (this.fromDate);
            var tempToDate = new Date (this.toDate);
            
            db.collection('store')
            .doc(this.userId)
            .collection('transactions')
            .where('date', '>=' , tempFromDate)
            .where('date', '<=', tempToDate)
            .orderBy('date', 'desc')
            .get()
            .then((snapshot) => {
              snapshot.forEach((doc) => {
                this.salesArr.push(Number(doc.data().salesInfo.sales));                                                this.marginArr.push(Number(doc.data().salesInfo.margin));
                       
              this.noOfSales += parseFloat(doc.data().salesInfo.noOfSales);
              var date = doc.data().date;  
              date = date.toDate();
              var chart_date = this.timestamp_to_date(date);
              this.labelsArr.push(chart_date)          
            }); 
          }).then(() => {
            this.calculate_total_sales();
            this.calculate_total_margin();
            this.calculate_avg_sale();
            this.show_chart();
          });
       },
       
       timestamp_to_date(timestamp) {
         var date = new Date(timestamp);       
         var dd = String(date.getDate()).padStart(2, '0');
         var mm = String(date.getMonth() + 1).padStart(2, '0'); /*January is 0!*/
         var yyyy = date.getFullYear();
      
         date = yyyy + '-' + mm + '-' + dd;
         date = dd;
         return date;
       },
       
       calculate_avg_sale() {
       this.avgSale = (this.totalSales/this.noOfSales).toFixed(2);
       },
      
       calculate_total_sales() {
         this.totalSales =      this.salesArr.reduce(this.add, 0);
      /*initial value to avoid when the array is empty*/
       },
      
       calculate_total_margin() {
         this.totalMargin = this.marginArr.reduce(this.add, 0);
      },
      
       add(accumulator,a) {
         return accumulator + parseFloat(a);
       },
      
       show_chart() {
         var ctx = document.getElementById('sales-chart').getContext('2d');
         var chart = new Chart(ctx, {
           type: 'bar',
           data: {
           labels: this.labelsArr,
           datasets: [{
             label: 'Sales',
             backgroundColor: 'rgb(255, 99, 132)',
             borderColor: 'rgb(255, 99, 132)',
             data: this.salesArr
           }]
         },
         /* Configuration options go here*/
         options: {
         scales: {
         xAxes: [{
           gridLines: {
             color: "rgba(0, 0, 0, 0)",
           }
         }]
         }
         }
       });
      },
      
      get_user_id() {
        auth.onAuthStateChanged((user) => {          
          if(user){
            this.userId = (user.uid);             
          }
          else{
            document.write('Please Login');
            setTimeout(() => {
              window.location.href = '/store/login'; 
            }, 1000);
          }
          
        });
      }
      
                
      }             
      });
      
      app.get_user_id();
      
    </script>
