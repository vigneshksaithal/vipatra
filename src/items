  <body>
  <section v-cloak id="body">
  
    <h5 class="text-center my-3">Inventory</h5>
    <div class="container">
      <div class="row">
        <div class="col">
        
          <div v-if="showAlert" v-text="alert" class="alert alert-primary text-center" role="alert"></div>
          
          <!-- Button trigger modal -->
          <div class="text-center">
            <button @click="clear_modal" class="btn btn-primary" data-toggle="modal" data-target="#item-modal">+ Add item</button>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col">
          <div class="text-center">
            <div v-show="!showItems" class="spinner-border text-dark m-5" role="status">
  <span class="sr-only">Loading...</span>
</div>
          </div>
          
          <table v-show="showItems" class="table table-sm table-hover">
            <thead>
              <th scope="col">#</th>
              <th scope="col">Item</th>
              <th scope="col">Price</th>
            </thead>
            <tbody>
              <tr @click="row_click(item)" v-for="(item, index) in items" :key="item.docId">
                <td scope="row">{{ ++index }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.salePrice }}</td>
              </tr>
            </tbody>
          </table>
          
        </div>
      </div>
    </div>
    
    <div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="add-item-modal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">{{ modalTitle }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="modal-form">
              <div class="form-group">
                <label>Item name</label>
                <input type="text" class="form-control" v-model="item" placeholder="Item name">
              </div>
              <div class="row form-group">
                <div class="col">
                  <label>Cost Price</label>
                  <input v-model="costPrice" type="number" class="form-control" placeholder="Cost price">
                </div>
                <div class="col">
                  <label>Sale Price</label>
                  <input v-model="salePrice" type="number" class="form-control" placeholder="Sale price">
                </div>
              </div>
              <div class="row form-group">
                <div class="col">
                  <label>Stock</label>
                    <input v-model="stock" type="number" class="form-control">
                </div>
                <div class="col">
                  <label>Opening Stock</label>
                    <input v-model="openingStock" type="number" class="form-control">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-8">
                  <label>Min. Stock</label>
                  <input v-model="minStock" type="number" class="form-control">
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
            <button v-show="showDeleteBtn" @click="delete_item" type="button" class="btn btn-danger">Delete</button>
            <button v-show="showAddItemBtn" @click="add_item" type="button" class="btn btn-primary">Add Item</button>
            <button v-if="showSaveBtn" @click="edit_item" type="button" class="btn btn-primary">Save</button>
          </div>
        </div>
      </div>
      </div>
        
    </section>
    <script>            
      
      var app = new Vue({
        el: '#body',
        data() {
          return {
            showItems: false,
            items: [],
            item: '',
            salePrice: '',
            costPrice: '',
            stock: '',
            openingStock: '',
            minStock: '',
            docId: '',
            showAlert: false,
            alert: '',
            modalTitle: '',
            showAddItemBtn: false,
            showSaveBtn: false,
            showStockInput: false,
            showDeleteBtn: true     
          }     
        },
        methods: {
        
          get_items() {
            db.collection('biz')
            .doc(this.userId)
            .collection('items')
            .orderBy('item.name', 'asc')
            .onSnapshot((querySnapshot) => {              
              querySnapshot.forEach((doc) => {
                let val = doc.data().item
                this.items.push({
                  docId: doc.id,
                  name: val.name,
                  costPrice: val.costPrice,
                  salePrice: val.salePrice,
                  stock: val.stock.current,
                  openingStock: val.stock.opening,
                  minStock: val.stock.min,
                })                
                this.showItems = true
              }) 
            })
            
          },
                                        
          add_item() {  
            this.items.length = 0              
            $('#item-modal').modal('hide')    
                                 
            db.collection('biz')
            .doc(this.userId)
            .collection('items')
            .add({
              item: {
                name: this.item,      
                costPrice: this.costPrice,
                salePrice: this.salePrice,
                stock: {
                  opening: this.openingStock,
                  current: this.stock,
                  min: this.minStock
                },
                date: firebase.firestore.Timestamp.fromDate(new Date())
             },
             bizId: this.userId             
           }).then(() => {                    
             this.showAlert = true
             this.alert = 'Item Added'
             setTimeout(() => { 
               this.showAlert = false
             }, 3000)                                
           })
         },
          
         edit_item() {
           $('#item-modal').modal('hide')
           this.items.length = 0
           db.collection('biz')
           .doc(this.userId)
           .collection('items')
           .doc(this.docId)
           .update({
             item: {
               name: this.item,
               costPrice: parseFloat(this.costPrice),
               salePrice: parseFloat(this.salePrice),
               stock: {
                 opening: parseFloat(this.openingStock),
                 current: parseFloat(this.stock),
                 min: parseFloat(this.minStock)
               }
             }            
           }).then(() => {
            this.showAlert = true
            this.alert = 'Item Saved'
            setTimeout(() => { 
              this.showAlert = false
            }, 1500)    
          })
        },
          
        delete_item() {
          this.items.length = 0
          $('#item-modal').modal('hide')            
          db.collection('biz')
          .doc(this.userId)
          .collection('items')
          .doc(this.docId)
          .delete()
          .then(() => {
            this.showAlert = true
            this.alert = 'Item Deleted'
            setTimeout(() => { 
              this.showAlert = false
            }, 1500)
          })
        },
                    
        row_click(item) {           
          $('#item-modal').modal('show')
          this.modalTitle = 'Edit Item'
          this.showSaveBtn = true
          this.showAddItemBtn = false
          this.showDeleteBtn = true
          this.docId = item.docId
          this.item = item.name
          this.costPrice = item.costPrice
          this.salePrice = item.salePrice
          this.stock = item.stock
          this.currentStock = item.currentStock
          this.minStock = item.minStock          
        },
      
        get_user_id() {
           auth.onAuthStateChanged((user) => {
             if(user){
               this.userId = user.uid
               this.get_items()
             }
             else{
               document.write('Please Login');
               setTimeout(() => {
                 window.location.href = '/store/login'; 
               }, 1000)
             }
           })
          },
          
          clear_modal() {
            this.modalTitle = 'Add item'
            this.showAddItemBtn = true
            this.showSaveBtn = false
            this.showDeleteBtn = false
            this.docId = ''
            this.item = ''
            this.costPrice = ''
            this.salePrice = ''
            this.stock = ''
            this.currentStock = ''
            this.minStock = ''
            this.taxPercent = '' 
          }                          
        }
      })
      
      document.addEventListener('DOMContentLoaded', () => {
        app.get_user_id()
        feather.replace()
      }) 
        
    </script> 
    
