    <script>                                                     
      var app = new Vue({
        el: '#body',
        data() {
          return {
            userId: '',
            showItemsTable: false,
            biz: {
              name: '',
              address: '',
              phone: '',
              gstIN: ''
            },
            item: '',
            hsn: '',
            qty: 0,
            price: 0,
            discount: 0,
            taxPercent: 0,
            gst: 0,
            sgst: 0,
            cgst: 0,
            igst: 0,
            arr: [],
            invoiceNum: 0,
            billNote: '',
            taxableValue: 0,
            totalAmount: 0,
            totalMargin: 0,
            totalDiscount: 0,
            totalSgst: 0,
            totalCgst: 0,
            totalIgst: 0,
            margin: 0,
            billDate: '',
            billNo: 0,
            billId: '',
            items: [],
            billItems: [],
            searchBar: '',
            customers: [],
            customerName: '',
            customerAddress: '',
            customerPhone: 0,
            customerGSTIN: '',
            customerCode: '',
            customerArr: [],
            sendBillDisabled: false,
            itemsArr: [],
            sendBillAlertText: '',
            showSpinner: false,
            json: []                       
          }            
        },
        methods: {
          
          get_user_id() {
            auth.onAuthStateChanged(user => {
              if (user) {
                this.userId = user.uid
                this.get_items()
                this.get_store_details()
                this.get_customers_data()
              }
              else {
                document.write('Please Login')
                setTimeout(() => {
                window.location.href = '/store/login' 
                }, 1000)
              }
            })
          },
          
          get_items() {
            db.collection('biz')
            .doc(this.userId)
            .collection('items')
            .get()
            .then(query => {
                query.docs.forEach(doc => {
              let val = doc.data().item
              this.arr.push(val.name)
              this.items.push({
                item: val.name,
                hsn: val.hsn,
                price: val.salePrice,
                margin: (val.salePrice - val.costPrice),
                taxType: val.tax.type,
                taxPercent: val.tax.percent,
                
                docId: doc.id                  
              })   
            })
          })
        },
                            
        get_store_details() {
          db.collection('biz')
          .doc(this.userId)
          .get()
          .then(doc => {
            let val = doc.data().bizInfo
            this.biz.name = val.name
            this.biz.address = val.address
            this.biz.phone = val.phone
            this.biz.gstIN = val.gstIN
            this.billNo = (doc.data().billInfo.prevBillNo + 1)
            this.billNote = doc.data().billInfo.note
          })        
        },
         
        add_item() {
          let gst = 0
          if (this.discount == '') {
            this.discount = 0
          }
          if (this.taxPercent  == 'E') {
            gst = 'Exempted'
            this.taxPercent = 0
          }
          else {
            gst = this.taxPercent * this.taxableValue / 100
          }
          this.taxableValue = ((this.qty * this.price) - this.discount)
          this.gst = this.taxableValue * this.taxPercent / 100
          this.calculate_total()
          this.billItems.push({
            item: this.item,
            hsn: this.hsn,
            qty: this.qty,
            price: this.price,
            discount: this.discount,
            taxableValue: ((this.qty * this.price) - this.discount),
            gst: gst,
            total: this.total,
            docId: this.docId
          })          
          this.totalAmount += this.total
          this.totalMargin += this.qty * this.margin
          this.totalDiscount += this.discount
          this.totalSgst += this.sgst * this.taxableValue/100
          this.totalCgst += this.cgst * this.taxableValue/100
          this.totalIgst += this.igst * this.taxableValue/100
          this.item = ''
          this.qty = ''
          this.price = ''
          this.discount = ''
          this.margin = ''
          this.docId = ''
        },      
         
        get_data() {            
          let n = this.items.length
          for (let i = 0; i < n; i++) {
            if (this.item == this.items[i].item) {
              this.price = this.items[i].price
              this.margin = this.items[i].margin
              this.hsn = this.items[i].hsn
              this.docId = this.items[i].docId 
              if (this.items[i].taxType == 'GST') {     
              this.taxPercent = this.items[i].taxPercent  
              }   
              else if (this.items[i].taxType == 'IGST') {
                this.igst = this.items[i].taxPercent 
                this.gst = this.igst * this.taxableValue / 100 
              }      
              break
            }
            else {
              this.price = ''
              this.margin = 0
            }
          }
        },
        
        calculate_total() {
          let totalTax = parseFloat(this.gst) + parseFloat(this.igst)
          this.total = this.taxableValue + totalTax
        },
        
        get_bill_no() {
          if (this.prevBillNo == '') {
            return false
          } 
          else {
            db.collection('biz') 
            .doc(this.userId) 
            .get()
            .then(doc => {
              this.billNo = (doc.data().billInfo.prevBillNo + 1)
            })
          }    
        },
                      
         html2json() {
           this.json = []
           let n = this.billItems.length
           for (let i = 0; i < n; i++) {
             this.json.push({
               item: this.billItems[i].item,
               qty: this.billItems[i].qty,
               price: this.billItems[i].price,
               discount: this.billItems[i].discount,
               taxableValue: this.billItems[i].taxableValue,
               sgst: this.billItems[i].gst / 2,
               cgst: this.billItems[i].gst / 2,
               igst: this.billItems[i].gst,
               total: this.billItems[i].total
             })
           }            
         },
         
         save_sales() {
           let sales = parseFloat(this.totalAmount)
           let margin = parseFloat(this.totalMargin)
           db.collection('biz')
           .doc(this.userId)
           .collection('sales')
           .doc(this.billDate)
           .set({
             date: firebase.firestore.Timestamp.fromDate(new Date(this.billDate)),
             sales: {
               total: firebase.firestore.FieldValue.increment((sales)),
               margin: firebase.firestore.FieldValue.increment(margin),
               noOfSales: firebase.firestore.FieldValue.increment(1)
           },
           bizId: this.userId
         },{merge: true}).then(() => {
         })        
       },
                            
         save_bill(wantPdf) {
           app.html2json()
           app.is_date_null()
           let cus_code = this.customerCode
           this.sendBillDisabled = true
           this.showSpinner = true
           this.sendBillAlertText = 'Saving bill...'       
           db.collection('bills')
           .add({
             bizId: this.userId,
             customerCode: this.customerCode,
             bill: {
               biz: { 
                 name: this.biz.name,
                 address: this.biz.address,
                 phone: this.biz.phone                                   
               },
               billNo: this.billNo,
               totalAmount: this.totalAmount,
               totalGST: this.totalSgst + this.totalCgst,
               totalIGST: this.totalIgst,
               date: firebase.firestore.Timestamp.fromDate(new Date(this.billDate)),
               items: this.json
             }
           }).then(async function(doc) { 
             if (wantPdf == 'YES') {
               var element = document.getElementById('bill-pdf')
               await html2pdf(element)
             }      
             app.update_stock()
             app.update_bill_no()
             this.billId = doc.id         
             app.save_sales();
           }).then(() => {
             app.reset()
             this.showSpinner = false
             this.sendBillAlertText = 'Bill Saved successfully!'
             setTimeout(() => {
               this.sendBillAlertText = ''
               $('#send-bill-modal').modal('hide')
               this.sendBillDisabled = false
             }, 1200)
           })     
         },
          
          is_date_null() {
            if (this.billDate == '') {
              this.billDate = this.todays_date()
            }
          },
         
          todays_date() {
            let date = new Date()
            let dd = String(date.getDate()).padStart(2, '0')
            let mm = String(date.getMonth() + 1).padStart(2, '0') //January is 0!
            let yyyy = date.getFullYear()
      
            date = yyyy + '-' + mm + '-' + dd
            return date
          },          
                   
          update_stock() {
            let n = this.billItems.length
            for (let i = 0; i < n; i++) {
              let docId = this.billItems[i].docId
              let qty = -Math.abs(this.billItems[i].qty)
              if (docId) {
                db.collection('biz')
                .doc(this.userId)
                .collection('items')
                .doc(docId)
                .update({
                  'item.stock': firebase.firestore.FieldValue.increment(qty)
                })                   
              } 
            }
          },
          
          update_bill_no() {
            db.collection('biz')  
            .doc(this.userId) 
            .update({
              'billInfo.prevBillNo': this.billNo  
            })
            this.billNo = this.billNo + 1
          },
                              
          reset() {
            this.billItems = []
            this.item = ''
            this.customerName = ''
            this.billDate = ''
            this.totalAmount = 0
            this.totalMargin = 0
            this.search = ''
            this.price = ''
            this.qty = ''
            this.discount = ''
          },
          
          get_customers_data() {
            db.collection('biz')
            .doc(this.userId)
            .collection('customers')
            .onSnapshot(query => {
              this.customerArr.length = 0
              this.customers.length = 0
              query.docs.forEach(doc => {
                let val = doc.data().customer
                this.customerArr.push(val.name)
                this.customers.push({
                  id: doc.id,
                  name: val.name,
                  address: val.address,
                  phone: val.phone,
                  gstIN: val.gstIN
                })
              })
            })
          },
          
          add_customer_data() {
            let n = this.customers.length
            for (let i = 0; i < n; i++) {
              if (this.customers[i].name == this.customerName) {
                this.customerid = this.customers[i].id
                this.customerAddress = this.customers[i].address
                this.customerPhone = this.customers[i].phone
                this.customerGSTIN = this.customers[i].gstIN              
                break
              }
              else {
                this.customerId = ''
                this.customerAddress = ''
                this.customerPhone = ''
                this.customerGSTIN = ''
              }
            }  
          },
          
          add_new_customer() {
            db.collection('biz')
            .doc(this.userId)
            .collection('customers')
            .add({
              customer: {
                name: this.customerName,
                address: this.customerAddress,
                phone: this.customerAddress,
                gstIN: this.customerGSTIN
              }
            }).then((doc) => {
              $('#add-customer-modal').modal('hide')
            })
          }                                       
      
      },
       
      watch: {
       item: function item_watch() {
         this.get_data()
       },
       
       customerName: function get_customer_data() {
         this.add_customer_data()
       }
      }
      
      })
       
      var search = document.getElementById('search-bar') 
      var customer_search = document.getElementById('customer-search') 
      document.addEventListener('DOMContentLoaded', () => {       
        app.get_user_id()
        feather.replace()
        autocomplete(search, app.arr)
        app.customerArr.push('cash')
        console.log(app.customerArr, '4')     
            customer_autocomplete(customer_search, app.customerArr)
      })
        
    </script>
    
    <script>
      function customer_autocomplete(inp, arr) {
        let d = document.getElementById('customer-autocomplete')
        d.classList.add('list-group', 'position-relative')
        let currentFocus
        inp.addEventListener('input', function(e) {
          let a, b, i, val = this.value
          
          closeAllLists()
          if (!val) { 
            return false
          }
          currentFocus = -1
           
          a = document.createElement('div')
       a.classList.add('autocomplete-items', 'bg-light', 'position-absolute', 'border', 'mt-1', 'w-100', 'rounded', 'shado')
    
    a.style.top = '100%' 
    a.style.zIndex = 99 
      
    this.parentNode.appendChild(a)
    let btn = document.createElement('div')
    btn.innerHTML = '<button class="btn" data-toggle="modal" data-target="#add-customer-modal">+ Add customer</button>'
    for (i = 0; i < arr.length; i++) {
      if (arr[i].substr(0, val.length).toUpperCase() == val.toUpperCase()) {
        b = document.createElement('li')
        b.classList.add('list-group-item', 'border-0')
        b.innerHTML = arr[i].substr(0, val.length)
        b.innerHTML += '<strong>' + arr[i].substr(val.length) + '</strong>'
        b.innerHTML += '<input type="hidden" value="' + arr[i] + '">'
        b.addEventListener('click', function(e) {
         app.customerName = this.getElementsByTagName('input')[0].value
          closeAllLists()
        })
        a.appendChild(b)
        a.appendChild(btn)
      }
      else {
        a.appendChild(btn) 
      }
    }
  })
  inp.addEventListener('keydown', function(e) {
    var x = document.getElementById(this.id)
    if (x) {
      x = x.getElementsByTagName('div')
    }
    if (e.keyCode == 40) {
      currentFocus++
      addActive(x)
    } 
    else if (e.keyCode == 38) { 
      currentFocus--
      addActive(x)
    } 
    else if (e.keyCode == 13) {
      e.preventDefault()
      if (currentFocus > -1) {
        if (x) {
          x[currentFocus].click()
        }
      }
    }
  })
    
  function addActive(x) {
    if (!x) {
      return false
    }
    removeActive(x)
    if (currentFocus >= x.length) {
      currentFocus = 0
    }
    if (currentFocus < 0) {
      currentFocus = (x.length - 1)
    }
    x[currentFocus].classList.add('active')
  }
  
  function removeActive(x) {
    for (var i = 0; i < x.length; i++) {
      x[i].classList.remove('active')
    }
  }
  
  function closeAllLists(el) {
    var x = document.getElementsByClassName('autocomplete-items')
    for (var i = 0; i < x.length; i++) {
      if (el != x[i] && el != inp) {
        x[i].parentNode.removeChild(x[i])
      }
    }
  }
    
  document.addEventListener('click', function (e) {
    closeAllLists(e.target)
  })
}      
    </script>
    
