    <br>
    <section v-cloak id="body" class="container">
      <div class="row">
        <div class="col">
          <h4 class="text-center my-2">Vipatra</h4>
          <span>Log in to your account</span>
          <br><br>
          <form class="text-center">            
            <div class="form-group">
              <input type="email" class="form-control" aria-describedby="email" placeholder="Enter email" v-model="email">
            </div>
                     
            <button class="btn btn-success btn-block my-3" @click.prevent="login" :disabled="disabled">
            <span v-show="disabled" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <span v-show="disabled" class="sr-only">Loading...</span>
            <span class="font-weight-bold" v-show="!disabled">Continue</span>
            </button>
            
            <div v-show="error" class="alert alert-info my-5">{{ error }}</div>
          </form>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col text-center my-2">
          <span>Â© Vipatra</span>
