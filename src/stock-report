  <body>
    <h5 class="text-center my-3">Stock Report</h5>
    <section v-cloak id="body" class="container">
    
      <div v-show="showSpinner" class="text-center">
        <div class="spinner-border" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      
      <div v-show="showAlert" class="alert alert-secondary" role="alert">No reports to show. Please add items by going to inventory to see reports.</div>
      
      <table v-show="showTable" class="table table-sm table-hover">
        <thead>
          <th scope="col">#</th>
          <th scope="col">Item</th>
          <th scope="col">Stock</th>
          <th scope="col">Stock Value</th>
        </thead>
        <tbody>
          <tr v-for="(item, index) in items">
            <td>{{ ++index }}</td>
            <td>{{ item.item }}</td>
            <td>{{ item.stock }}</td>
            <td>{{ item.stockValue }}</td>
          </tr>
        </tbody>
      </table>
      
    </section>
    
    <script> 
             
      var app = new Vue({
        el: '#body',
        data() {
          return {
            showSpinner: true,
            showTable: false,
            showAlert: false,
            userId: '',
            items: []
          }            
        },
        methods: {
        
          show_items() {
            db.collection('biz')
            .doc(this.userId)
            .collection('items')
            .orderBy('item.name', 'asc')
            .get()
            .then((snapshot)=>{
              snapshot.forEach((doc)=>{
                var val = doc.data().item
                this.items.push({
                  item: val.name,
                  stock: val.stock.current,
                  stockValue: (val.stock.current * val.costPrice) 
                })    
              })
            }).then(() => {
              if (this.items != '') {
                this.showSpinner = false
                this.showTable = true 
              }
              else {
                this.showSpinner = false
                this.showAlert = true  
              }
            }).catch(() => {
              this.showSpinner = false
              this.showAlert = true
            })
          },              
          
          get_user_id() {
            auth.onAuthStateChanged((user) => {           
              if (user) {
                this.userId = (user.uid)
                this.show_items()
              }
              else {
                document.write('Please Login')
                setTimeout(() => {
                window.location.href = '/store/login' 
              }, 1000)
              }
            })
          }            
        
        } 
      })
      document.addEventListener('DOMContentLoaded', () => {
        app.get_user_id()
        feather.replace()
      })
                             
    </script>  
